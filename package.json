{
  "author": "inc2734",
  "license": "GPL-2.0+",
  "dependencies": {},
  "devDependencies": {
    "@wordpress/env": "^4.0.4",
    "autoprefixer": "^10.2.5",
    "cpy-cli": "^3.1.1",
    "cssnano": "^5.0.3",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "sass-basis": "^14.0.0"
  },
  "scripts": {
    "export:wp-content:themes": "npm run cli 'cp -r wp-content/themes .export/wp-content'",
    "export:wp-content": "npm run cli 'rm -rf .export/wp-content' && run-p export:wp-content:*",
    "export:db": "mkdir -p .export/sql && npm run wp 'db export .export/sql/local.sql'",
    "export": "run-p export:*",
    "wp-env": "wp-env",
    "start": "wp-env start && open http://localhost:8888",
    "stop": "npm run export && wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "bash tests/install-theme.sh && wp-env start && wp-env run composer 'install --no-interaction'",
    "test:lint:php": "wp-env run composer run-script lint",
    "test:lint": "run-s test:lint:*",
    "test:unit:php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/snow-monkey-dropdown-navigation/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "clean:css": "rimraf dist/css && mkdir -p dist/css",
    "clean:zip": "rimraf snow-monkey-dropdown-navigation.zip",
    "css:app": "node-sass src/css/app.scss -o dist/css && postcss dist/css/app.css -r -c=postcss.config.js",
    "css:php": "cpy '**/*.php' '../../dist/css' --cwd=src/css --parents",
    "css": "npm run clean:css && npm-run-all -p css:*",
    "build": "npm-run-all -p css",
    "zip:pack": "rsync -a --exclude='/vendor' --exclude='/node_modules' --exclude='.*' --exclude='*.config.js' --exclude='*.xml.dist' --exclude='*.ruleset.xml' --exclude='/tests' --exclude='package*.json' . snow-monkey-dropdown-navigation && cd snow-monkey-dropdown-navigation && composer install --no-dev",
    "zip:archive": "zip -9 -qmr snow-monkey-dropdown-navigation.zip snow-monkey-dropdown-navigation",
    "zip": "npm run clean:zip && npm run zip:pack && npm run zip:archive"
  }
}
